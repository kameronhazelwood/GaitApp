<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="addSurgery" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gaitlabapp.controllers.Wizards.AddSurgeryController">

    <children>
        <Pane layoutX="-2.0" layoutY="-1.0" prefHeight="600.0" prefWidth="600.0">
            <children>
                <Label layoutX="31.0" layoutY="29.0" text="Surgery Details">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="date" layoutX="109.0" layoutY="76.0" />
                <Label layoutX="25.0" layoutY="80.0" text="Date" />
                <Label layoutX="23.0" layoutY="122.0" text="Procedure " />
                <TextField fx:id="procedure" layoutX="109.0" layoutY="118.0" />
                <Label layoutX="23.0" layoutY="162.0" text="Side" />
                <TextField fx:id="side" layoutX="109.0" layoutY="156.0" />
                <Label layoutX="23.0" layoutY="198.0" text="Surgeon" />
                <TextField fx:id="surgeon" layoutX="109.0" layoutY="193.0" prefHeight="25.0" prefWidth="327.0" />
                <Label layoutX="23.0" layoutY="234.0" text="Facility" />
                <TextField fx:id="facility" layoutX="109.0" layoutY="230.0" prefHeight="25.0" prefWidth="327.0" />
                <Label layoutX="27.0" layoutY="270.0" text="Comments" />
                <TextArea fx:id="comments" layoutX="109.0" layoutY="270.0" prefHeight="99.0" prefWidth="425.0" />
                <Button fx:id="saveButton" layoutX="391.0" layoutY="428.0" mnemonicParsing="false" onAction="#onSaveSurgery" text="Save Surgery" />
                <Button fx:id="cancelButton" layoutX="490.0" layoutY="428.0" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
            </children>
        </Pane>
    </children>



</AnchorPane>
